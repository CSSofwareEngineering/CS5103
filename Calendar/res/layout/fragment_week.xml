<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity$WeekSectionFragment" >
    
    <TextView
        android:id="@+id/week_calendar_header"
        android:background="@color/Beige"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center" >        
    </TextView>
    
    <GridView
        android:id="@+id/week_days_gridview"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:stretchMode="columnWidth"
        android:numColumns="@string/calendar_columns" >
        
    </GridView>
    
	<GridView
	    android:id="@+id/week_calendar_gridview"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="2dp"
	    android:stretchMode="columnWidth"
	    android:gravity="center"
	    android:numColumns="@string/calendar_columns" >
	    
	</GridView>
    
	<TextView
	    android:id="@+id/week_event_header"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@color/Beige"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
	    
	</TextView>
	    
    <ListView
	    android:id="@+id/event_list"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content" >
	    
	</ListView>

</LinearLayout>
